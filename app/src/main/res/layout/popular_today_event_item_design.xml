<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PopularEventSingleView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/PopularItemImageView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/RoundedStyle"
        android:src="@drawable/no_anunciar"
        android:background="@drawable/image_shape_background"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha="0.9"
        app:shapeAppearance="@style/RoundedStyle"
        android:background="@drawable/image_shade_background"/>

    <TextView
        android:id="@+id/PopularItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="No Anunciar"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/PopularItemTimeDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 - 27 Aug, 2022"
        app:layout_constraintStart_toStartOf="@+id/PopularItemTitle"
        app:layout_constraintBottom_toTopOf="@+id/PopularItemTitle"
        android:textStyle="bold"
        android:textColor="#676565"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>